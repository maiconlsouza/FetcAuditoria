@model IEnumerable<BancoDeDados.RelatorioAuditoriaView>

@using Interacao.Framework.MVC

<!-- Breadcrumbs-->
<ol class="breadcrumb">
    <li class="breadcrumb-item active">Dashboard</li>
</ol>

<h2>Arquivos</h2>

<div class="row">
    <div class="col-xl-4 col-sm-6 mb-4">
        <div class="card text-white bg-primary o-hidden h-100">
            <div class="card-body">
                <div class="card-body-icon">
                    <i class="fa fa-fw fa-comments"></i>
                </div>
                <div class="mr-5"><span id="meus_arquivos"><img src="~/Content/Images/loading.gif" height="50" />carregando...</span></div>
            </div>
            <a class="card-footer text-white clearfix small z-1" href="@Url.Content("~/Arquivos/Index/9")">
                <span class="float-left">Ver Detalhes</span>
                <span class="float-right">
                    <i class="fa fa-angle-right"></i>
                </span>
            </a>
        </div>
    </div>
    <div class="col-xl-4 col-sm-6 mb-4">
        <div class="card text-white bg-success o-hidden h-100">
            <div class="card-body">
                <div class="card-body-icon">
                    <i class="fa fa-fw fa-shopping-cart"></i>
                </div>
                <div class="mr-5"><span id="lidos"><img src="~/Content/Images/loading.gif" height="50" />carregando...</span></div>
            </div>
            <a class="card-footer text-white clearfix small z-1" href="@Url.Content("~/Arquivos/Index/1")">
                <span class="float-left">Ver Detalhes</span>
                <span class="float-right">
                    <i class="fa fa-angle-right"></i>
                </span>
            </a>
        </div>
    </div>
    <div class="col-xl-4 col-sm-6 mb-4">
        <div class="card text-white bg-danger o-hidden h-100">
            <div class="card-body">
                <div class="card-body-icon">
                    <i class="fa fa-fw fa-support"></i>
                </div>
                <div class="mr-5"><span id="nao_lidos"><img src="~/Content/Images/loading.gif" height="50" />carregando...</span></div>
            </div>
            <a class="card-footer text-white clearfix small z-1" href="@Url.Content("~/Arquivos/Index/0")">
                <span class="float-left">Ver Detalhes</span>
                <span class="float-right">
                    <i class="fa fa-angle-right"></i>
                </span>
            </a>
        </div>
    </div>
</div>

@if (Html.GetCookie("SOB") == "99")
{
<div class="row">
    <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>Usuário</th>
                    <th>Visualizados</th>
                    <th>Não Visualizados</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.Usuario.nome</td>
                    <td>@item.Lidos</td>
                    <td>@item.NaoLidos</td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
}

@section JSReady {
    CarregaMeuDash();
}