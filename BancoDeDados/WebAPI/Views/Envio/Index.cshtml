@{
    ViewBag.Title = "Envio de Arquivos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Breadcrumbs-->
<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="@Url.Content("~/")">Dashboard</a></li>
    <li class="breadcrumb-item active">Envio de Arquivos</li>
</ol>

<h2>@ViewBag.Title</h2>

<div class="card mx-auto">
    <div class="card-header">@ViewBag.Title</div>
    <div class="card-body">
        <form>
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-12">
                        <label for="arquivo">Descrição do Arquivo</label>
                        <input class="form-control" id="arquivo" type="text" placeholder="Descrição do Arquivo">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="grupo">Grupo de Usuários</label>
                <select class="form-control" id="grupo"></select>
            </div>
            <button type="button" class="btn btn-primary btn-block" id="Salvar">Salvar</button>
        </form>
    </div>
</div>

@section JSReady {
    ComboGrupos();

    $("#Salvar").click(function() {
        SalvarArquivo();
    });
}