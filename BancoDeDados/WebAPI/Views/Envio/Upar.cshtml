@model BancoDeDados.ArquivoView

@{
    ViewBag.Title = "Upload";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Breadcrumbs-->
<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="@Url.Content("~/")">Dashboard</a></li>
    <li class="breadcrumb-item"><a href="@Url.Content("~/Envio")">Envio de Arquivos</a></li>
    <li class="breadcrumb-item active">Upload</li>
</ol>

<h2>@ViewBag.Title</h2>

<div class="card mx-auto">
    <div class="card-header">@ViewBag.Title</div>
    <div class="card-body">
        <form>
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-12">
                        <label for="arquivo">Descrição do Arquivo</label>
                        <input class="form-control" id="arquivo" type="text" placeholder="Descrição do Arquivo" value="@Model.Descricao" disabled />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="grupo">Grupo de Usuários</label>
                <input class="form-control" id="grupo" type="text" value="@Model.Grupo.Nome" disabled />
            </div>
            <div class="form-group">
                <label for="grupo">Arquivo Anexado</label>
                <input class="form-control" id="anexado" type="text" value="@Model.ArquivoLocal" disabled />
            </div>

            <button type="button" class="btn btn-primary btn-block" data-codigo="@Model.Id" id="Salvar" onclick="EnviaArquivo(this);">Selecionar Arquivo</button>
        </form>
    </div>
</div>

<div class="modal fade" id="cadproduto">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            </div>
            <div class="modal-body">
                <div class="form-group" id="grupo-codigo">
                    <label for="subir">Selecione o Arquivo</label>
                    <input id="subir" type="file" class="form-control" />
                </div>
            </div>

            <div class="progress">
                <div class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%;">
                    <span class="sr-only">Iniciando...</span>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>

@section JSReady {

}

@section JS {
    <script src="@Url.Content("~/Scripts/jquery.ui.widget.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.fileupload.js")"></script>
}

@section CSS {
    <link href="@Url.Content("~/Content/jquery-ui.min.css")" rel="stylesheet" />
}