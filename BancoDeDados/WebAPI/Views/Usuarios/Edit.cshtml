@model BancoDeDados.UsuarioView

@{
    ViewBag.Title = "Manutenção";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="@Url.Content("~/")">Dashboard</a></li>
    <li class="breadcrumb-item">Cadastros</li>
    <li class="breadcrumb-item"><a href="@Url.Content("~/Usuarios")">Usuários</a></li>
    <li class="breadcrumb-item active">Manutenção</li>
</ol>

<div class="card mx-auto">
    <div class="card-header">@ViewBag.Title</div>
    <div class="card-body">
        <form id="form">
            <input type="hidden" id="Id" name="Id" value="@Model.Id" />
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-12">
                        <label for="arquivo">Nome</label>
                        <input class="form-control" name="nome" id="nome" type="text" placeholder="Nome" value="@Model.nome">
                    </div>
                </div>
                <div class="form-row">
                    <div class="col-md-12">
                        <label for="arquivo">E-mail</label>
                        <input class="form-control" name="email" id="email" type="email" placeholder="E-mail" value="@Model.email">
                    </div>
                </div>
                <div class="form-row">
                    <div class="col-md-6">
                        <label for="arquivo">Usuário</label>
                        <input class="form-control" name="usr" id="usr" type="text" placeholder="Usuário" value="@Model.usr">
                    </div>
                    <div class="col-md-6">
                        <label for="arquivo">Senha</label>
                        <input class="form-control" name="senha" id="senha" type="password" value="@Model.senha" />
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-6">
                        <label for="grupo">Grupo de Usuários</label>
                        <select class="form-control" id="grupo"></select>
                    </div>
                    <div class="col-md-6">
                        <label for="tipo">Tipo de Usuário</label>
                        <select class="form-control" id="tipo"></select>
                    </div>
                </div>
            </div>
            <button type="button" class="btn btn-primary btn-block" id="Salvar">Salvar</button>
        </form>
    </div>
</div>

@section JSReady {
    ComboGrupos(@Model.grupo.Id);
    ComboTipo(@Model.tipoUsuario.Id);

    $("#Salvar").click(function() {
        SalvarUsuario();
    });
}